@import "_reset.css"

$footer-height = 50px
$header-steps = 10px
*
  font-family: "Helvetica Neue", Helvetica, sans-serif

  
h6 { font-size: 10px + $header-steps }
h5 { font-size: 10px + ($header-steps*2) }
h4 { font-size: 10px + ($header-steps*3) }
h3 { font-size: 10px + ($header-steps*4) }
h2 { font-size: 10px + ($header-steps*5) }
h1 { font-size: 10px + ($header-steps*6) }

body > #header
  top: 0
  left: 0
  position: relative
  width: 100%
  background-color: black
  box-shadow: 2px 2px 2px black

body > #content
  padding-bottom: $footer-height

body > #footer
  bottom: 0px
  left: 0px
  position: absolute
  width: 100px;
  height: $footer-height